<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.profile.ProfileFragment"
    android:background="@color/background_color"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="40sp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profilePicture"
        android:layout_width="155sp"
        android:layout_height="155sp"
        android:layout_gravity="center"
        android:background="@drawable/profile"
        android:clickable="true"
        android:padding="5sp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/circular"
        app:strokeColor="#191D40"
        app:strokeWidth="2sp"></com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Full Name"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="example@gmail.com"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/ubahEmail"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ubah"
            android:layout_weight="3"
            android:textColor="@color/main_color"
            android:gravity="right"/>

    </LinearLayout>

    <View
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/main_color" />

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="*********" />

        <TextView
            android:id="@+id/ubahPassword"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ubah"
            android:layout_weight="3"
            android:textColor="@color/main_color"
            android:gravity="right"/>

    </LinearLayout>

    <View
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/main_color" />

    <TextView
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_0818xxxxxxxx"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/ubahPhone"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ubah"
            android:layout_weight="3"
            android:textColor="@color/main_color"
            android:gravity="right"/>

    </LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Logout"
        android:textSize="16sp"
        app:cornerRadius="20sp"
        tools:ignore="TextContrastCheck" />

</LinearLayout>