<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.main.MainFragment"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/background_color">

    <ImageView
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:background="@drawable/main_logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mas_kuli"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <View
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/black"
        android:layout_marginLeft="80sp"
        android:layout_marginRight="80sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/kuli_terbaik_di_sekitar_kamu"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <LinearLayout
        android:clickable="true"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:id="@+id/kuliContainer"
        android:layout_width="match_parent"
        android:layout_height="264sp"
        android:orientation="vertical"
        android:background="@color/container_color">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="182sp"     >

            <ImageView
                android:id="@+id/kuliProfile"
                android:layout_width="match_parent"
                android:layout_height="182sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/buttonLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:background="@drawable/left"
                    android:clickable="true" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_weight="10" />

                <ImageView
                    android:id="@+id/buttonRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/right"
                    android:clickable="true" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp">

            <TextView
                android:id="@+id/kuliName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="kuliName"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/kuliRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peran : peran"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/kuliRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating 4.8"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>